---
import Pagination from "@/components/Pagination.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import { slugSelector, supportedLang } from "@/lib/utils/languageParser";
import { humanize } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";
import type { ContentEntryMap } from "astro:content";
const { default_language } = config.settings;

let { lang, slug } = Astro.params;

if (!lang) {
  lang = default_language;
}
const TAGS_FOLDER = "tags";
const langCollection: keyof ContentEntryMap = lang as keyof ContentEntryMap;

const allTags = await getAllTaxonomy(langCollection, TAGS_FOLDER);
const tags = await getTaxonomy(langCollection, TAGS_FOLDER);

const totalPages: number = Math.ceil(
  tags.length / config.settings.pagination
);

const currentPage = slug && !isNaN(Number(slug)) ? Number(slug) : 1;
const indexOfLastTag = currentPage * config.settings.pagination;
const indexOfFirstTag = indexOfLastTag - config.settings.pagination;
const currentTags = tags.slice(indexOfFirstTag, indexOfLastTag);

export async function getStaticPaths() {
  const TAGS_FOLDER = "tags";

  const paths = await Promise.all(
    supportedLang.map(async (lang) => {
      const langCollection: keyof ContentEntryMap =
        lang as keyof ContentEntryMap;
      const tags = await getAllTaxonomy(langCollection, TAGS_FOLDER);
      const totalPages = Math.ceil(tags.length / config.settings.pagination);
      const langString = lang.toString();
      const langPaths = [];

      for (let i = 1; i < totalPages; i++) {
        langPaths.push({
          params: {
            lang: langString || undefined,
            slug: (i + 1).toString(),
          },
        });
      }

      return langPaths;
    })
  );

  return paths.flat();
}
---

<Base title={"Tags"}>
  <PageHeader title={"Tags"} />
  <section class="section">
    <div class="container text-center">
      <ul class="mb-10 inline-block">
        {
          currentTags.map((tag: string) => {
            const count = allTags.filter((c) => c === tag).length;
            return (
              <li class="inline-block m-2">
                <a
                  href={slugSelector(`/tags/${tag}`, lang)}
                  class="btn btn-primary bg-white dark:bg-black text-text dark:text-darkmode-text font-normal border-none box-shadow duration-200 hover:bg-primary dark:hover:bg-darkmode-primary hover:text-white btn-sm mr-1"
                >
                  {humanize(tag)}{" "}
                  <span class="ml-2 rounded bg-body dark:bg-darkmode-body px-2 text-text-dark dark:text-darkmode-text-dark border border-primary dark:border-darkmode-primary">
                    {count}
                  </span>
                </a>
              </li>
            );
          })
        }
      </ul>
      <Pagination
        section={TAGS_FOLDER}
        currentPage={currentPage}
        totalPages={totalPages}
      />
    </div>
  </section>
</Base>
